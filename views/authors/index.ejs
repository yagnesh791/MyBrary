<h2>All Author</h2>

<form action="/authors" method="GET">

    <label for="name">Name</label>
    <input type="text" name="name" value="<%- searchOption%>">
    <button type="submit">Search</button>
</form>

<% authors.forEach(author=> { %>
    <div>
        <%= author.name %>
    </div>
    <% }); %>